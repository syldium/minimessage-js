{
  "name": "minimessage",
  "version": "0.0.0",
  "license": "MIT",
  "main": "./dist/minimessage-dom.umd.js",
  "module": "./dist/minimessage-dom.es.js",
  "exports": {
    ".": {
      "import": "./dist/minimessage-dom.es.js",
      "require": "./dist/minimessage-dom.umd.js"
    }
  },
  "files": [
    "lib",
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "format": "prettier \"{src,lib,test}/**/*.{js,ts}\" --write --single-quote --trailing-comma none",
    "lint": "eslint lib/**/*.ts src/**/*.ts test/**/*.ts",
    "serve": "vite preview",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "esbuild": "^0.12.24",
    "esbuild-jest": "^0.5.0",
    "eslint": "^7.32.0",
    "jest": "^27.1.0",
    "jest-diff": "^27.1.0",
    "prettier": "^2.3.2",
    "typescript": "^4.4.2",
    "vite": "^2.5.2",
    "vite-dts": "^1.0.3"
  },
  "dependencies": {
    "eslint-config-prettier": "^8.3.0"
  }
}
